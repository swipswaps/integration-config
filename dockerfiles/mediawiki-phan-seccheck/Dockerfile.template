FROM {{ "php-ast" | image_tag }} AS php-ast

FROM {{ "composer72" | image_tag }}

USER root
COPY --from=php-ast /usr/lib/php/20170718/ast.so /usr/lib/php/20170718/ast_1.0.1.so

RUN phpdismod ast && \
    # Create directory where we're going to install to
    install --directory --mode 777 /opt/phan

USER nobody

COPY run.sh /run.sh
ENTRYPOINT ["/run.sh"]
